#!/usr/local/bin/zsh

mkdir meta
touch meta/@.md

mkdir ideas
touch ideas/@.md

mkdir context

mkdir text

touch .project

# if an argument was supplied, set the project name to that
if [[ $# -gt 0 ]]; then
  hnetext make-project --path . --name $1
else
  hnetext make-project --path .
fi

git init

cp /Users/hne/dotfiles/writing-project-gitignore .gitignore
